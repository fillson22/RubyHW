<% if current_user %>
  <h2>Your orders</h2>
    <table class="table">
        <tr>
          <th>ID</th>
          <th>Data</th>
          <th>Total Price</th>
          <th>Status</th>
          <th></th>
          <th></th>
        </tr>
      <% @orders.each do |order|%>
        <tr>
          <th><%= order.id %></th>
          <th><%= order.created_at %></th>
          <th><%= number_to_currency(order.cart.total_price) %></th>
          <th><%= order.status %></th>
          <th><%= link_to 'View order', order_path(order) %></th>
          <th><%= link_to 'Pay', order_paid_path(id: order.id)%> </th>
          <th><%= button_to order_path(id: order.id), method: :delete do%> 
                  Delete
              <%end%>
          </th>
          </th>
        </tr>
      <%end%>  
    </table>
<%end%>