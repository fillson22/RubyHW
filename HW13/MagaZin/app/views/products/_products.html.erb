    <%@products.each do |product|%>
      <div class="card" style="width: 10rem; padding: 1rem">
        <% if product.image.attached? %>
        <%= image_tag product.image.variant(:norm)%>
        <% else %>
        <p> No image </p>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%=link_to product.name, product%></h5>
          <p class="card-text">Price: <%=number_to_currency(product.price)%></p>
        </div>
        <div>
          <% if current_user %>
            <%= button_to 'In cart', line_items_path(product_id: product.id), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    <%end%>

  
   